@model IEnumerable<CrudMVCApp.Models.Pedido>

@{
    ViewData["Title"] = "Listado de Despachos";
}

<h1>Listado de Despachos</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" name="buscarCliente" class="form-control" placeholder="Buscar por cliente..." />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Crear" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Despacho
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Usuario</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@(item.Cliente != null ? $"{item.Cliente.Nombre} {item.Cliente.Apellido}" : "N/A")</td>
                    <td>@item.Usuario</td>
                    <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.Confirmado)
                        {
                            <span class="badge bg-success">Confirmado</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Detalle" asp-route-id="@item.id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Ver Detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No se encontraron despachos registrados.
    </div>
}