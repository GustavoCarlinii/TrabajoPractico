@model CrudMVCApp.Models.Pedido

@{
    ViewData["Title"] = "Detalle de Despacho";
}

<h1>Detalle de Despacho</h1>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5>Información del Despacho #@Model.id</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Cliente:</dt>
                    <dd class="col-sm-8">@(Model.Cliente != null ? $"{Model.Cliente.Nombre} {Model.Cliente.Apellido}" : "N/A")</dd>
                    
                    <dt class="col-sm-4">DNI/CUIT:</dt>
                    <dd class="col-sm-8">@(Model.Cliente != null ? (string.IsNullOrEmpty(Model.Cliente.Cuit) ? Model.Cliente.Dni : Model.Cliente.Cuit) : "N/A")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Fecha:</dt>
                    <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-4">Usuario:</dt>
                    <dd class="col-sm-8">@Model.Usuario</dd>
                    
                    <dt class="col-sm-4">Estado:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Confirmado)
                        {
                            <span class="badge bg-success">Confirmado</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info text-white">
        <h5>Productos Despachados</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Detalles != null && Model.Detalles.Any())
                    {
                        foreach (var detalle in Model.Detalles)
                        {
                            <tr>
                                <td>@detalle.ProductoId</td>
                                <td>@(detalle.Producto?.Nombre ?? "Producto no disponible")</td>
                                <td>@detalle.Cantidad</td>
                                <td>@detalle.PrecioUnitario.ToString("C")</td>
                                <td>@((detalle.Cantidad * detalle.PrecioUnitario).ToString("C"))</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No hay productos en este despacho</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2"><strong>Totales:</strong></td>
                        <td><strong>@Model.TotalProductos</strong></td>
                        <td></td>
                        <td><strong>@Model.Total.ToString("C")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver al listado
    </a>
</div>