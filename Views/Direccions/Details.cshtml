@model CrudMVCApp.Models.Direccion

@{
    ViewData["Title"] = "Detalle de Dirección";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i>Detalle de Dirección</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Calle)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Calle)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Ciudad)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Ciudad)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.CodigoPostal)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CodigoPostal)</dd>

                <dt class="col-sm-4 fw-semibold">Persona (ID)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Persona.Id)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
