@model CrudMVCApp.Models.Direccion

@{
    ViewData["Title"] = "Crear Dirección";
}

<div class="container mt-5">
    <div class="card shadow-sm" style="max-width: 500px;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i>Crear Dirección</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" id="validationSummary"></div>

                <div class="mb-3">
                    <label asp-for="Calle" class="form-label"></label>
                    <input asp-for="Calle" class="form-control" />
                    <span asp-validation-for="Calle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ciudad" class="form-label"></label>
                    <input asp-for="Ciudad" class="form-control" />
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CodigoPostal" class="form-label"></label>
                    <input asp-for="CodigoPostal" class="form-control" />
                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PersonaId" class="form-label"></label>
                    <select asp-for="PersonaId" class="form-select" asp-items="ViewBag.PersonaId">
                        <option value="">-- Seleccione Persona --</option>
                    </select>
                    <span asp-validation-for="PersonaId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i> Crear
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver al listado
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
