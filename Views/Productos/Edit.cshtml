@model CrudMVCApp.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="mb-4 text-primary">Editar Producto</h3>

        <form asp-action="Edit" novalidate>
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Descripcion" class="form-label fw-bold"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="PrecioCompra" class="form-label fw-bold"></label>
                    <input asp-for="PrecioCompra" class="form-control" />
                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="PrecioVta" class="form-label fw-bold"></label>
                    <input asp-for="PrecioVta" class="form-control" />
                    <span asp-validation-for="PrecioVta" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Stock" class="form-label fw-bold"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-start mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
