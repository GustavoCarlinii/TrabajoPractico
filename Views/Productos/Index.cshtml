@model IEnumerable<CrudMVCApp.Models.Producto>

@{
    ViewData["Title"] = "ABM Productos";
}

<h1 class="mb-4">ABM Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> Nuevo Producto</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.PrecioCompra)</th>
                <th>@Html.DisplayNameFor(model => model.PrecioVta)</th>
                <th>@Html.DisplayNameFor(model => model.Stock)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrecioCompra)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrecioVta)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-pencil"></i> Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No se encontraron productos registrados.
    </div>
}
