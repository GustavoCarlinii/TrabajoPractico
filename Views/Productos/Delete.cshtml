@model CrudMVCApp.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="card border-danger shadow p-4">
        <h3 class="mb-3 text-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> ¿Estás seguro que querés eliminar este producto?
        </h3>

        <dl class="row">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Descripcion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PrecioCompra)</dt>
            <dd class="col-sm-9">$@Html.DisplayFor(model => model.PrecioCompra)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PrecioVta)</dt>
            <dd class="col-sm-9">$@Html.DisplayFor(model => model.PrecioVta)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Stock)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Stock)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </form>
    </div>
</div>
