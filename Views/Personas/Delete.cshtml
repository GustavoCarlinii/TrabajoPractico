@model CrudMVCApp.Models.Persona

@{
    ViewData["Title"] = "Eliminar Persona";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
            </h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4">¿Está seguro que desea eliminar estos datos?</h5>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Apellido)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Dni)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Dni)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Cuit)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cuit)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Futbol)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Futbol)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Basquet)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Basquet)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Otros)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Otros)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Genero)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Genero)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash-fill"></i> Eliminar
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver al Listado
            </a>
        </div>
    </div>
</div>
