@model CrudMVCApp.Models.Pedido

@{
    ViewData["Title"] = "Nuevo Pedido";
}

<h2>Nuevo Pedido</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="Usuario">Nombre de Usuario</label>
        <input asp-for="Usuario" class="form-control" required />
    </div>

    <div class="form-group mt-2">
        <label for="Detalles">Detalles</label>
        <textarea asp-for="Detalles" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
