@model CrudMVCApp.Models.Pedido

@{
    ViewData["Title"] = "Nuevo Pedido";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="bi bi-basket3 me-2"></i>Nuevo Pedido</h3>
        </div>
        <div class="card-body">
            <form asp-action="Crear" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Usuario" class="form-label">Nombre de Usuario</label>
                    <input asp-for="Usuario" class="form-control" required />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Detalles" class="form-label">Detalles</label>
                    <textarea asp-for="Detalles" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="Detalles" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-lg me-1"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-x-lg me-1"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
