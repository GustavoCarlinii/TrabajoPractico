@model CrudMVCApp.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1 class="mb-4">Editar Usuario</h1>

<h4 class="mb-3">Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="nombre" class="form-label">Nombre de Usuario</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Clave" class="form-label">Contrase√±a</label>
                <input asp-for="Clave" type="password" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label">Tipo de Usuario</label>
                <select asp-for="Tipo" class="form-select">
                    <option value="usuario">Usuario</option>
                    <option value="admin">Administrador</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
