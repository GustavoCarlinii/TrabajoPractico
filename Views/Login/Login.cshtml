
@model CrudMVCApp.Models.Usuario

@* @{
    layout = "_layout";
    viewdata["ocultarnavbar"] = true;
} *@

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    
    <div class="form-group mb-3">
        <label asp-for="nombre" class="form-label">Nombre de Usuario</label>
        <input asp-for="nombre" class="form-control" placeholder="Ingrese su nombre de usuario" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="Clave" class="form-label">Contraseña</label>
        <input asp-for="Clave" type="password" class="form-control" placeholder="Ingrese su contraseña" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>
    
    <!-- Campo oculto para el tipo de usuario -->
    <input type="hidden" asp-for="Tipo" value="usuario" />
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Entrar</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
